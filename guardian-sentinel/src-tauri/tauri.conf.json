{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Guardian Sentinel",
  "version": "0.1.0",
  "identifier": "com.guardian.sentinel",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": ["binaries/guardian-daemon"]
  },
  "app": {
    "windows": [
      {
        "title": "Guardian Sentinel",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
